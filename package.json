{
  "name": "rooms-ui",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@material-ui/core": "^4.11.0",
    "@material-ui/icons": "^4.9.1",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "email-validator": "^2.0.4",
    "jsonwebtoken": "^8.5.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "3.4.3"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "postman-develop": "newman run ./api/postman_tests/rooms-stg.postman_collection.json",
    "postman-master": "newman run ./api/postman_tests/rooms-prod.postman_collection.json",
    "generate_swagger_json": "yaml2json ./public/api/v1/swagger.yaml > ./public/api/v1/swagger.json",
    "proper_api_host": "sed -i \"s/API_HOST_URL/$API_HOST_URL/g\" ./public/api/doc/index.html && sed -i \"s/API_HOST_URL/$API_HOST_URL/g\" ./public/api/v1/swagger.yaml",
    "deploy_all": "npm run proper_api_host && npm run generate_swagger_json && npm run build"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "newman": "^5.2.0",
    "yamljs": "^0.3.0"
  }
}
